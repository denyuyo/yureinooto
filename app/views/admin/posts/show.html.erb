<div class="container" style="font-family: 'Monomaniac One', sans-serif; margin-top: 33px; margin-bottom: 22px;">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= @post.title %></h1>
      <p><%= @post.content %></p>
      <p>閲覧数: <%= @post.viewcount %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p>コメント</p>
      <% @post.comments.each do |comment| %>
        <p style="color: #5599dd;">
          <%= comment.content %>
          <%= link_to "削除", comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p>ブックマーク: <%= @bookmark_count %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if  %>
        <span style="color:red;">♡︎</span>
      <% elsif %>
        <span>♡︎</span>
      <% end %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= link_to "削除", admin_post_path(@post), method: :delete, data: { confirm: "削除してもよろしいか？" }, class: "btn btn-danger button-depress mt-2 mx-1" %>
    </div>
  </div>
</div>