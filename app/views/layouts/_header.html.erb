                  <% end %>
                  <% if user_signed_in? %>
                    <li class="nav-item mx-auto" data-toggle="tooltip">
                      <%= render partial: 'partial/circle' %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </nav>
            
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
