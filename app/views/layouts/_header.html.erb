<header style="background-color: mintcream;">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <div class="row w-100">
        <div class="col-3">
          <%= link_to root_path, class: 'nav-link nav-brand' do %>
           <h2>yuureinooto</h2>
          <% end %>
        </div>
        <div class="col-9">
          <div class="row w-100 justify-content-end">
            <button class="navbar-toggler" style="color:#F5FFFA;" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon">obake</span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
              <ul class="navbar-nav ml-5">
                <% if user_signed_in? %>
                  <!--ユーザーがログインしていたら-->
                  <span class="navbar-text text-right mr-3">ようこそ</span>
                  <li><%= link_to "プロフィール",     user_profile_path,                class: 'nav-link text-right' %></li>
                  <li><%= link_to "マニアたちの投稿", posts_path,                    class: 'nav-link text-right' %></li>
                  <li><%= link_to "ブックマーク",     bookmarks_path,               class: 'nav-link text-right' %></li>
                  <li><%= link_to "ログアウト",       destroy_user_session_path, class: 'nav-link text-right', method: :delete %></li>
                <% elsif admin_signed_in? %>
                  <!--管理者がログインしていたら-->
                  <li><%= link_to "マニアたち",   admin_users_path,            class: 'nav-link text-right' %></li>
                  <li><%= link_to "コメント管理", admin_comments_path,        class: 'nav-link text-right' %></li>
                  <li><%= link_to "投稿管理",     admin_posts_path,                  class: 'nav-link text-right' %></li>
                  <li><%= link_to "ログアウト",   destroy_admin_session_path,  class: 'nav-link text-right', method: :delete %></li>
                <% else %>
                  <!--ログイン前画面-->
                  <li><%= link_to "About",            about_path,                      class: 'nav-link text-right' %></li>
                  <li><%= link_to "マニアたちの投稿", posts_path,                      class: 'nav-link text-right' %></li>
                  <li><%= link_to "sign up",          new_user_registration_path,  class: 'nav-link text-right' %></li>
                  <li><%= link_to "log in",           new_user_session_path,       class: 'nav-link text-right' %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>