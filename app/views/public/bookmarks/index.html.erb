<h1 style="font-family: 'Monomaniac One', sans-serif; font-size: 33px;">ブックマーク</h1>

<% @bookmarks.each do |bookmark| %>
  <div class="card mb-3", style= "font-family: 'Monomaniac One', sans-serif;">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.post.title %></h5>
      <p class="card-text"><%= bookmark.post.content %></p>
      <p class="card-text">投稿者: <%= bookmark.post.user.name %></p>
      <p class="card-text">作成日時: <%= bookmark.post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
      <%= link_to "詳細", post_path(bookmark.post), class: "btn btn-primary button-depress" %>
    </div>
  </div>
<% end %>