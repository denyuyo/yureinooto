<div class="container" style="font-family: 'Yusei Magic', sans-serif; margin-top: 33px; margin-bottom: 22px;">
  <div class="bookmark-count" data-toggle="tooltip" data-placement="top" title="<%= @bookmarks.count %>件">
    <span class="bookmark-count"><%= @bookmarks.count %>件のいいね</span>
  </div>
  <% @bookmarks.each do |bookmark| %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-auto">
            <%= image_tag bookmark.post.user.get_profile_image(40, 40), class: "rounded-circle" %>
          </div>
          <div class="col">
            <h5 class="card-title"><%= bookmark.post.title %></h5>
            <p class="card-text"><%= bookmark.post.content %></p>
            <p class="card-text">投稿主: <%= bookmark.post.user.name %></p>
            <p class="card-text">作成日時: <%= bookmark.post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
            <div class="selected-tags">
              <% bookmark.post.tags.each do |tag| %>
                <span class="badge badge-primary" style="margin-bottom: 10px; font-size: 13px;"><%= tag.tag_name %></span>
              <% end %>
            </div>
            <%= link_to "詳細", post_path(bookmark.post), class: "btn btn-secondary button-depress" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function() {
    $('.bookmark-count').tooltip();
  });
</script>

<style>
  .bookmark-count {
    font-size: 22px;
    color: #999;
    margin-right: 10px;
    background-color: #f2f2f2;
    padding: 2px 5px;
    border-radius: 3px;
  }
</style>