<h3>新規投稿</h3>

<%= form_for [:public, @post], html: { class: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <div class="col-sm-6">
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "投稿する", class: 'btn btn-primary' %>
<% end %>

<%= link_to "戻る", public_posts_path, class: 'btn btn-secondary' %>