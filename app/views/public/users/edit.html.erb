<%= form_for([:public, @user], url: public_user_path(@user), multipart: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, "ユーザーネーム", style: "font-family: 'Monomaniac One', sans-serif;" %>
    <%= f.text_field :name, class: "form-control", style: "font-family: 'Monomaniac One', sans-serif;" %>
  </div>

  <div class="form-group">
    <%= f.label :email, style: "font-family: 'Monomaniac One', sans-serif;" %>
    <%= f.email_field :email, class: "form-control", style: "font-family: 'Monomaniac One', sans-serif;" %>
  </div>

  <div class="form-group">
    <%= f.label :password, style: "font-family: 'Monomaniac One', sans-serif;" %>
    <%= f.password_field :password, class: "form-control", style: "font-family: 'Monomaniac One', sans-serif;" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, style: "font-family: 'Monomaniac One', sans-serif;" %>
    <%= f.password_field :password_confirmation, class: "form-control", style: "font-family: 'Monomaniac One', sans-serif;" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image, style: "font-family: 'Monomaniac One', sans-serif;" %>
    <%= f.file_field :profile_image, class: "form-control-file", style: "font-family: 'Monomaniac One', sans-serif;" %>
  </div>

  <%= f.submit "更新", class: "btn btn-primary", style: "font-family: 'Monomaniac One', sans-serif;" %>
<% end %>

<%= link_to "戻る", public_user_path(@user), class: "btn btn-secondary", style: "font-family: 'Monomaniac One', sans-serif;" %>