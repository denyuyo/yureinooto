<div class="container" style="font-family: 'Klee One', cursive;
font-family: 'Yusei Magic', sans-serif; margin-top: 22px; margin-bottom: 11px;">
  <h3>マニアたち</h3>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>ユーザーネーム</th>
        <th>Eメール</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50, 50), style: "border-radius: 20%;", class: "profile-image" if user.profile_image.attached? %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td style="font-family: 'DotGothic16', sans-serif;"><%= user.withdrawn? ? "<span style='color: red;'>退会済み</span>".html_safe : "" %></td>
          <td style="font-family: 'DotGothic16', sans-serif;">
            <%= link_to "詳細", user_path(user), class: "btn btn-primary button-depress" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>