<h3 style="font-family: 'Monomaniac One', sans-serif; font-size: 33px;">マニアたち</h3>

<table class="table", style= "font-family: 'Monomaniac One', sans-serif;">
  <thead>
    <tr>
      <th></th>
      <th>ユーザーネーム</th>
      <th>Eメール</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50, 50), style: "border-radius: 20%;", class: "profile-image" if user.profile_image.attached? %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "詳細", user_path(user), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>