<div class="container mb-2 mt-2" style="font-family: 'New Tegomin', sans-serif;">
  <h3 class="mb-4">マニアたち</h3>
  <hr>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <%= image_tag user.get_profile_image(100, 100), class: "profile-image rounded-circle mr-3" if user.profile_image.attached? %>
              <div>
                <h5 class="card-title mb-0"><%= user.name %></h5>
                <p class="card-text"></p>
              </div>
            </div>
            <% if user.withdrawn? %>
              <p class="card-text text-danger">退会済み</p>
            <% end %>
          </div>
          <div class="card-footer">
            <%= link_to "詳細", user_path(user), class: "btn btn-primary button-depress btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @users, theme: "twitter-bootstrap-4" %>
  </div>
</div>
