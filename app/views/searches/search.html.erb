<div class="container" style="font-family: 'Monomaniac One', sans-serif; margin-top: 33px; margin-bottom: 22px;">
  <% if @range == "ユーザー" %>
    <h2 class="text-center">"<%=@word %>"のユーザーをみつけたよ!</h2>
    <% if @users.any? %>
      <h2>ユーザー</h2>
      <ul>
        <% @users.each do |user| %>
          <li><%= user.name %></li>
        <% end %>
      </ul>
    <% else %>
      <h2 class="text-center">"<%=@word %>"というユーザーはいないみたい</h2>
    <% end %>
  <% else %>
    <% if @posts.any? %>
      <h2>つぶやき</h2>
      <ul>
        <% @posts.each do |post| %>
          <li><%= link_to post.title, post_path(post) %></li>
        <% end %>
      </ul>
    <% else %>
      <h2 class="text-center">"<%=@word %>"というつぶやきはまだないようだ...</h2>
    <% end %>
  <% end %>
</div>





